<Page x:Class="Laverna.Pages.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Laverna.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add">

    <Grid>
        <Button x:Name="BTBack" HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="50"
                Height="20"
                Margin="10"
                Content="Назад"
                Click="BTBack_Click"/>
        <Viewbox>
            <Grid HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <TextBlock Text="Наименование:"
                        Grid.Row="0"
                        Grid.Column="0"
                           Margin="0 0 5 10"
                           VerticalAlignment="Center"/>
                <TextBox x:Name="TBName"
                         Width="200"
                         Height="25"
                         Grid.Row="0"
                         Grid.Column="1"
                         Margin="0 0 0 10"/>

                <TextBlock Text="Тип:"
                       Grid.Row="1"
                       Grid.Column="0"
                           Margin="0 0 5 10"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CBType"
                         Width="200"
                         Height="25"
                         Grid.Row="1"
                         Grid.Column="1"
                         Margin="0 0 0 10"
                          DisplayMemberPath="Name"/>

                <TextBlock Text="Статус:"
                       Grid.Row="2"
                       Grid.Column="0"
                           Margin="0 0 5 10"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CBStatus"
                         Width="200"
                         Height="25"
                         Grid.Row="2"
                         Grid.Column="1"
                         Margin="0 0 0 10"
                         DisplayMemberPath="Name"/>

                <Button x:Name="BTSave"
                        Grid.Row="3"
                        Grid.Column="1"
                        Height="25"
                        Width="80"
                        Content="Добавить"
                        HorizontalAlignment="Right"
                        Click="BTSave_Click"/>

            </Grid>
        </Viewbox>
    </Grid>
</Page>
