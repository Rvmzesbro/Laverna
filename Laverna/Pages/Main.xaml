<Page x:Class="Laverna.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Laverna.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main" Loaded="Page_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ToolBar Grid.Row="0">
            <Button x:Name="BTAdd" 
                    Content="Добавить"
                    Click="BTAdd_Click"
                    Height="25"/>
            <Button x:Name="BTEdit" 
                    Content="Редактировать" 
                    Click="BTEdit_Click"
                    Height="25"/>
            <Button x:Name="BTDelete"
                    Content="Удалить" 
                    Click="BTDelete_Click"
                    Height="25"/>
        </ToolBar>

        <DataGrid x:Name="DGEquipment" 
                  Grid.Row="1" 
                  Margin="5"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding Id}" 
                                    Width="Auto"/>
                <DataGridTextColumn Header="Наименование" 
                                    Binding="{Binding Name}"
                                    Width="*"/>
                <DataGridTextColumn Header="Тип" 
                                    Binding="{Binding Types.Name}"
                                    Width="*"/>
                <DataGridTextColumn Header="Статус" 
                                    Binding="{Binding Status.Name}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Grid.Row="2"
                  Header="Поиск" 
                  Margin="5"
                  BorderBrush="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Наименование:" 
                       Grid.Row="0" 
                       Grid.Column="0"/>
                <TextBox x:Name="TBName" 
                         Grid.Row="0" 
                         Grid.Column="1" 
                         Height="25"
                         Margin="5"
                         TextChanged="TBName_TextChanged"/>

                <Label Content="Тип:" 
                       Grid.Row="0" 
                       Grid.Column="2"/>
                <ComboBox x:Name="CBType"
                          Grid.Row="0"
                          Grid.Column="3"
                          Margin="5"
                          Height="25"
                          SelectionChanged="CBType_SelectionChanged"
                          DisplayMemberPath="Name">
                </ComboBox>

                <Label Content="Статус:"
                       Grid.Row="1"
                       Grid.Column="0"/>
                <ComboBox x:Name="CBStatus"
                          Grid.Row="1" Grid.Column="1"
                          Margin="5"
                          Height="25"
                          SelectionChanged="CBStatus_SelectionChanged"
                          DisplayMemberPath="Name">
                </ComboBox>

                <Button x:Name="BTClear"
                        Grid.Column="3"
                        Grid.Row="1"
                        Width="70"
                        Height="25"
                        HorizontalAlignment="Right"
                        Margin="5"
                        Content="Очистить"
                        Click="BTClear_Click"/>

            </Grid>
        </GroupBox>
    </Grid>
</Page>
